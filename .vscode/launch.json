{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "program": "cmd/main.go"
    },
    {
      "name": "Development",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "args": [
        "-c",
        "dev"
      ],
      "program": "cmd/main.go"
    },
    {
      "name": "Production",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "args": [
        "-c",
        "prod"
      ],
      "program": "cmd/main.go"
    },
    {
      "name": "Test",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "args": [
        "-c",
        "test"
      ],
      "program": "cmd/main.go"
    }
  ]
}
